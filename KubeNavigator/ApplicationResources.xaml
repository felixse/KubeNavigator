<ResourceDictionary
    x:Class="KubeNavigator.ApplicationResources"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:KubeNavigator.Converters"
    xmlns:local="using:KubeNavigator"
    xmlns:shelf="using:KubeNavigator.ViewModels.Shelf"
    xmlns:templateselectors="using:KubeNavigator.TemplateSelectors"
    xmlns:toolkitConverters="using:CommunityToolkit.WinUI.Converters">
    <converters:ListItemToMenuConverter x:Key="ListItemToMenuConverter" />
    <templateselectors:ShelfItemTemplateSelector x:Key="ShelfItemTemplateSelector">
        <templateselectors:ShelfItemTemplateSelector.EditTemplate>
            <DataTemplate x:DataType="shelf:EditKubernetesResourceViewModel">
                <TabViewItem Header="{x:Bind Title}">
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="Edit" />
                    </TabViewItem.IconSource>
                </TabViewItem>
            </DataTemplate>
        </templateselectors:ShelfItemTemplateSelector.EditTemplate>
        <templateselectors:ShelfItemTemplateSelector.LogsTemplate>
            <DataTemplate x:DataType="shelf:PodLogsViewModel">
                <TabViewItem Header="{x:Bind Title}">
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="List" />
                    </TabViewItem.IconSource>
                </TabViewItem>
            </DataTemplate>
        </templateselectors:ShelfItemTemplateSelector.LogsTemplate>
        <templateselectors:ShelfItemTemplateSelector.ShellTemplate>
            <DataTemplate x:DataType="shelf:PodShellViewModel">
                <TabViewItem Header="{x:Bind Title}">
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="Play" />
                    </TabViewItem.IconSource>
                </TabViewItem>
            </DataTemplate>
        </templateselectors:ShelfItemTemplateSelector.ShellTemplate>
        <templateselectors:ShelfItemTemplateSelector.ApplicationLogTemplate>
            <DataTemplate x:DataType="shelf:ApplicationLogViewModel">
                <TabViewItem Header="{x:Bind Title}">
                    <TabViewItem.IconSource>
                        <FontIconSource
                            Glyph="&#xEBE8;" />
                    </TabViewItem.IconSource>
                </TabViewItem>
            </DataTemplate>
        </templateselectors:ShelfItemTemplateSelector.ApplicationLogTemplate>
    </templateselectors:ShelfItemTemplateSelector>
    <toolkitConverters:BoolToVisibilityConverter
        x:Key="TrueToVisibleConverter"
        FalseValue="Collapsed"
        TrueValue="Visible" />
    <toolkitConverters:BoolToVisibilityConverter
        x:Key="FalseToVisibleConverter"
        FalseValue="Visible"
        TrueValue="Collapsed" />
    <toolkitConverters:EmptyObjectToObjectConverter
        x:Key="NullToCollapsedConverter"
        EmptyValue="Collapsed"
        NotEmptyValue="Visible" />
    <toolkitConverters:EmptyObjectToObjectConverter
        x:Key="NullToVisibleConverter"
        EmptyValue="Visible"
        NotEmptyValue="Collapsed" />
    <toolkitConverters:CollectionVisibilityConverter x:Key="EmptyToCollapsedConverter" />
    <converters:ToStringConverter x:Key="ToStringConverter" />
    <converters:ShelfItemToViewConverter x:Key="ShelfItemToViewConverter" />
</ResourceDictionary>
