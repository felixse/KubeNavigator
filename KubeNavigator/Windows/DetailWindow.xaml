<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="KubeNavigator.Windows.DetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:KubeNavigator.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:KubeNavigator.Views"
    Title="DetailWindow"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base" />
    </Window.SystemBackdrop>
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar
            x:Name="AppTitleBar"
            Title="{x:Bind ViewModel.Title, Mode=OneWay}"
            BackRequested="AppTitleBar_BackRequested"
            IsBackButtonVisible="{x:Bind ViewModel.Details.CanGoBack, Mode=OneWay}"
            Subtitle="{x:Bind ViewModel.Details.Cluster.Name, Mode=OneWay}" />
        <Frame x:Name="RootFrame" Grid.Row="1" />

    </Grid>
</Window>
